  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Web Server",
      "cwd": "${workspaceFolder}/web",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "skipFiles": ["<node_internals>/**"],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Web Tests",
      "cwd": "${workspaceFolder}/web",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "test",
        "--",
        "--watchAll=false",
        "--runInBand",
        "--testPathPattern=(src|test)/.*\\.test\\.js$"
      ],
      "env": {
        "CI": "true"
      },
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch MCP Server",
      "cwd": "${workspaceFolder}/mcp",
      "program": "${workspaceFolder}/mcp/mcp-server.js",
      "skipFiles": ["<node_internals>/**"],
      "envFile": "${workspaceFolder}/mcp/.env",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch MCP Client",
      "cwd": "${workspaceFolder}/mcp",
      "program": "${workspaceFolder}/mcp/mcp-client.js",
      "args": ["female patients 30-50 with emphysema"],
      "skipFiles": ["<node_internals>/**"],
      "envFile": "${workspaceFolder}/mcp/.env",
      "console": "integratedTerminal"
    }
  ]
}